<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="settings_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_btn</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/ripple_effect</item>
    </style>

    <style name="mainToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="registred_edtx">
        <item name="android:layout_width">340dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/registred_edtx</item>
        <item name="android:fontFamily">@font/century_gothic_regular</item>
        <item name="android:textSize">@dimen/normal_size</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/grey_hint</item>
    </style>

    <style name="settings_change_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">300dp</item>
        <item name="android:background">@color/trancparent</item>
        <item name="android:fontFamily">@font/century_gothic_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey_hint</item>
        <item name="android:textSize">@dimen/big_tx</item>
    </style>

    <style name="press_edit_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/century_gothic_regular</item>
        <item name="android:textColor">@color/grey_hint</item>
        <item name="android:textSize">@dimen/small_size</item>
    </style>
</resources>