<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.ChangeNameFragment"
    android:background="@drawable/gradient_main">

    <EditText
        android:id="@+id/settings_add_name"
        android:hint="@string/registred_hinttx_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/settings_change_text"
        android:inputType="textPersonName"/>

    <TextView
        android:id="@+id/settings_change_name_desc"
        android:text="@string/settingschange_name_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_add_name"
        style="@style/press_edit_text" />

</androidx.constraintlayout.widget.ConstraintLayout>